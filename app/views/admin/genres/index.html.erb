<div class="container">
  <div class="row my-3">
    <span class="rounded bg-light py-2 px-3 font-weight-bold">ジャンル一覧・追加</span>
  </div>

  <div>
    <%= form_with model: [:admin, @genre] do |f| %>

      <% if @genre.errors.any? %>
      <%= @genre.errors.count %>件のエラーが発生しました
      <ul>
        <% @genre.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
      <% end %>

      <div class="field">
        <%= f.label "ジャンル名" %>
        <%= f.text_field :name, placeholder: "ジャンル名" %>
      </div>
      <%= f.submit "新規登録", class: "btn btn-success" %>
    <% end %>
  </div>

  <div class="row">
    <table class="table table-hover">
      <thead>
        <th class="bg-light">ジャンル</th>
      </thead>
      <tbody>
        <tr>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td>
                <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %>
              </td>
            </tr>
          <% end %>
        </tr>
      </tbody>
    </table>
  </div>
