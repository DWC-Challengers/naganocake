<div class="container">
  
  <% if @genre.errors.any? %>
    <%= @genre.errors.count %>件のエラーが発生しました
    <ul>
      <% @genre.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  
  <div class="row my-3">
    <span class="rounded bg-light py-2 px-3 font-weight-bold">ジャンル一覧・追加</span>
  </div>

  <div class="row">
    <%= form_with model: [:admin, @genre] do |f| %>
      <table class="col-12 mt-3 table table-borderless bg-light border rounded">
        <td>
          <%= f.label "ジャンル名", class: "mr-5" %>
        </td>
        <td>
          <%= f.text_field :name, placeholder: "ジャンル名", class: "mr-5" %>
        </td>
        <td>
          <%= f.submit "新規登録", class: "btn btn-success" %>
        </td>
      </table>
    <% end %>
  </div>

  <div class="row w-50 my-3">
    <table class="table table-hover">
      <thead class="bg-light">
        <th class="text-center">ジャンル</th>
        <th></th>
      </thead>
      <tbody>
        <tr>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td>
                <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %>
              </td>
            </tr>
          <% end %>
        </tr>
      </tbody>
    </table>
  </div>
