<div class="container">
  <h2 class="title">ジャンル一覧・追加</h2>
    <%= form_with model: [:admin, @genre] do |f| %>
      <div class="field">
        <%= f.label "ジャンル名" %>
        <%= f.text_field :name %>
      </div>
      <%= f.submit "新規登録", class: "btn btn-success" %>
    <% end %>

  <thead>
    <th>ジャンル</th>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td>
          <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</div>
