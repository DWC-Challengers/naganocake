<div class="container">
  <div class="row my-3">
    <span class="rounded bg-light py-2 px-3 font-weight-bold">ジャンル編集</span>
  </div>
  
  <div>  
    <%= form_with model: [:admin, @genre] do |f| %>

      <% if @genre.errors.any? %>
      <%= @genre.errors.count %>件のエラーが発生しました
      <ul>
        <% @genre.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
      <% end %>

      <div>
        <table>
          <td>
            <%= f.label "ジャンル名", class: "mr-5" %>
          </td>
          <td>
            <%= f.text_field :name, class: "mr-5" %>
          </td>
          <td>
            <%= f.submit "変更を保存", class: "btn btn-success" %>
          </td>
        </table>
      </div>
    <% end %>
  </div>
</div>
