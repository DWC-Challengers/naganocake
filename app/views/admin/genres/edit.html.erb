<div class="container">
  <div class="row my-3">
    <span class="rounded bg-light py-2 px-3 font-weight-bold">ジャンル編集</span>
  </div>

    <%= form_with model: [:admin, @genre] do |f| %>

      <% if @genre.errors.any? %>
      <%= @genre.errors.count %>件のエラーが発生しました
      <ul>
        <% @genre.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
      <% end %>

      <div class="field">
        <%= f.label "ジャンル名" %>
        <%= f.text_field :name %>
      </div>
      <%= f.submit "変更を保存", class: "btn btn-success" %>
    <% end %>
</div>
