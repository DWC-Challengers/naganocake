<div class="container">
  <div class="row my-3">
    <div class="my-auto py-auto">
      <span class="rounded bg-light py-2 px-3 font-weight-bold">商品一覧</span>
    </div>
    <div class="ml-auto">
      <a href="items/new" class="btn btn-shadow circle">
        <i class="fas fa-plus"></i>
      </a>
    </div>
  </div>
  
  <div class="row">
    <table class="table table-hover">
      <thead>
        <tr class="bg-light">
          <th scope="col">商品ID</th>
          <th scope="col">商品名</th>
          <th scope="col">税抜価格</th>
          <th scope="col">ジャンル</th>
          <th scope="col">ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to item.name, admin_item_path(item.id), class: "text-reset" %></td>
            <td><%= item.non_taxed_price %></td>
            <td><%= item.genre.name %></td>
            <td>
              <% if item.is_active == true %>
                <p class="text-success">販売中</p>
              <% else %>
                <p class="text-black-50">販売停止中</p>
              <% end %>
            </td>
          </tr>
        <% end %>
        <%= paginate @items %>
      </tbody>
    </table>
  </div>
</div>
