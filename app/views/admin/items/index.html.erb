<div class="container">
  <h2 class="title">商品一覧</h2>
  <tbody>
    <tr>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= link_to item.name, edit_admin_item_path(item.id) %></td>
        <td><%= item.non_taxed_price %></td>
        <td><%= item.genre.name %></td>
        <td>
          <% if item.is_active == true %>
            販売中
          <% else %>
            販売停止中
          <% end %>
        </td>
      </tr><br>
    <% end %>
    </tr>
  </tbody>
</div>
