<div class ="container">

  <div class = "row">
    <div class = "my-4">
      <span class ="rounded bg-light py-2 px-3 font-weight-bold">注文履歴一覧</span>
    </div>
    <% if @order.present? %>
    <table class ="table table-hover">
      <thread>
        <tr class="bg-light">
          <th scope="col">購入日時</th>
          <th scope="col">購入者</th>
          <th scope="col">注文個数</th>
          <th scope="col">注文ステータス</th>
        </tr>
      </thread>
      <% @orders.each do |order| %>
      <tbody>
        <tr>
          <%= link_to "#{order.created_at}", order_path(order.id) %>
          <td>2022/12/12</td>
          <%= order.customer.customer_name %>
          <td>石倉基之</td>
          <%= order.order_item.quantity %>
          <td>2</td>
          <%= order.status %>
          <td>入金待ち</td>
        </tr>
      </tbody>
      <% end %>
    </table>
      <%= paginate @orders %>
    <% else %>
  </div>
  <div class= "row">注文がありません（下記表示例）
  <%= render 'order_search', orders: @orders %>
  </div>
