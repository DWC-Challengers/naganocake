<div class ="container">

  <div class = "row">
    <div class = "my-4">
      <span class ="rounded bg-light py-2 px-3 font-weight-bold">注文履歴一覧</span>
    </div>
    <% if @orders.present? %>
    <table class ="table table-hover">
      <thread>
        <tr class="bg-light">
          <th scope="col">購入日時</th>
          <th scope="col">購入者</th>
          <th scope="col">注文個数</th>
          <th scope="col">注文ステータス</th>
        </tr>
      </thread>
      <% @orders.each do |order| %>
      <tbody>
        <tr>
          <td><%= link_to "#{order.created_at.strftime('%Y年%m月%d日 %H時%M分')}", admin_order_path(order.id) %></td>
          <td><%= order.customer.customer_name %></td>
          <%#= order.quantity %>
          <td>2</td>
          <td><%= order.status_i18n %></td>
        </tr>
      </tbody>
      <% end %>
    </table>
      <%= paginate @orders %>
    <% else %>
    <div>注文がありません</div>
    <% end %>
</div>
