<div class="container">
    <div class="row">
    <div class="my-5 col-8">
        <% if @customer.present? %>
            <span class ="px-2 bg-light"><%= @name %>さんの会員詳細</span>
            <table class="mt-3 table table-borderless">
                <tbody>
                    <tr>
                      <th class="col-4">会員ID</th>
                      <td class="col-6"><%= @customer.id %></td>
                    </tr>
                    <tr>
                      <th class="col-4 my-2">氏名</th>
                      <td><%= @name %></td>
                    </tr>
                    <tr>
                      <th class="col-4">フリガナ</th>
                      <td><%= @name_kana %></td>
                    </tr>
                    <tr>
                      <th class="col-4">郵便番号</th>
                      <td><%= @customer.postal_code %></td>
                    </tr>
                    <tr>
                      <th class="col-4">住所</th>
                      <td><%= @customer.address %></td>
                    </tr>
                    <tr>
                      <th class="col-4">電話番号</th>
                      <td><%= @customer.phone_number %></td>
                    </tr>
                    <tr>
                      <th class="col-4">メールアドレス</th>
                      <td><%= @customer.email %></td>
                    </tr>
                    <tr>
                      <th class="col-4">会員ステータス</th>
                      <td>
                      <% if @customer.is_deleted == false %>
                          <span class="font-weight-bold text-success">有効</span>
                      <% else %>
                          <span class="text-weight-bold text-secondary">退会</span>
                      <% end %>
                      </td>
                    </tr>
                </tbody>
            </table>
            <div class ="mx-auto">
              <%= link_to "編集する", edit_admin_customer_path(@customer.id), class:"btn btn-success" %>
              <%= link_to "注文履歴一覧を見る", admin_customer_orders_path(@customer.id), class:"btn btn-primary" %>
              
            </div>
            <% else %>
              <p>会員登録はありません</p>
            <% end %>
    </div>
    </div>
</div>