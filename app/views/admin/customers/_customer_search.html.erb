<%= form_with url: admin_customer_search_path, local: true, method: :get do |f| %>
  <div class="form-row mt-3">
    <div class="form-group col-8">
      <%= f.select :customer_status, options_for_select([["全て",''],["有効",0],["退会",1]]),{},class:"form-control" %>
    </div>
    <div class="form-group col-4 text-center">
      <%= f.submit "絞り込み",class:"btn btn-success" %>
    </div>
  </div>
<% end %>
