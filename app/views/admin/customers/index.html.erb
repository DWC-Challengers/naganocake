<div class="container">
  <div class="row my-3">
    <span class="rounded bg-light py-2 px-3 font-weight-bold">会員一覧</span>
  </div>
  <div class="row">
    <table class="table table-hover">
      <thread>
        <tr class="bg-light">
          <th scope="col">会員ID</th>
          <th scope="col">氏名</th>
          <th scope="col">メールアドレス</th>
          <th scope="col">ステータス</th>
        </tr>
      </thread>
      <% @customers.each do |customer| %>
      <tbody>
        <tr>
          <td><%= customer.id %></td>
          <td><%= link_to "#{customer.last_name+customer.first_name}", admin_customer_path(customer.id) %></td>
          <td><%= customer.email %></td>
          <td><%= customer.is_deleted %></td>
        </tr>
      </tbody>
      <% end %>
    </table>
    </div>
    <div class="row justify-content-center">
      <%= paginate @customers %>
    </div>
</div>