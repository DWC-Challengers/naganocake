<div class="container">
  <div class="row mt-3">
    <div class = "col-6 my-4">
      <span class="rounded bg-light py-2 px-3 font-weight-bold">会員一覧</span>
    </div>
    <div class="offset-2 col-4 ml-auto">
      <%= render 'customer_search', customers: @customers %>
    </div>
  </div>
  <div class="row">
    <table class="table table-hover">
      <thread>
        <tr class="bg-light">
          <th scope="col">会員ID</th>
          <th scope="col">氏名</th>
          <th scope="col">メールアドレス</th>
          <th scope="col">ステータス</th>
        </tr>
      </thread>
        <% @customers.each do |customer| %>
      <tbody>
        <tr>
          <td><%= customer.id %></td>
          <td><%= link_to "#{customer.customer_name}", admin_customer_path(customer.id) %></td>
          <td><%= customer.email %></td>
          <td>
            <% if customer.is_deleted == true %>
              <span class="font-weight-bold text-secondary"><%= customer.customer_status%></span>
            <% else %>
              <span class="font-weight-bold text-success"><%= customer.customer_status %></span>
            <% end %>
          </td>
        </tr>
      </tbody>
      <% end %>
    </table>
    </div>
    <div class="row justify-content-center">
      <%= paginate @customers %>
    </div>
</div>