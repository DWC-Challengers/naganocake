<div class="container">
    <div class="row">
        <span class ="px-2 bg-light"><%= @customer.last_name + @customer.first_name %>さんの会員詳細</span>
    </div>
    <div class="row">
        <%= form_with model: [:admin, @customer] do |f| %>
          <table class="mt-3 table table-borderless">
            <tbody>
                <tr>
                    <th class="col">会員ID</th>
                    <td class="col"><%= @customer.id %></td>
                </tr>
                <tr>
                    <th><%= f.label "氏名" %></th>
                    <td><%= f.text_field :last_name %></td>
                    <td><%= f.text_field :first_name %></td>
                </tr>
                <tr>
                    <th>フリガナ</th>
                    <td><%= f.text_field :last_name_kana %></td>
                    <td><%= f.text_field :first_name_kana %></td>

                </tr>
                <tr>
                    <th>郵便番号</th>
                    <td><%= f.text_field :postal_code %></td>
                </tr>
                <tr>
                    <th>住所</th>
                    <td colspan="2"><%= f.text_field :address, size:50 %></td>
                </tr>
                <tr>
                    <th>電話番号</th>
                    <td><%= f.text_field :phone_number %></td>
                </tr>
                <tr>
                    <th>メールアドレス</th>
                    <td><%= f.email_field :email %></td>
                </tr>
                <tr>
                    <th>会員ステータス</th>
                    <td><%= f.select :is_deleted, [['有効',0],['退会',1]],{include_blank: false, selected: 0}%></td>

                </tr>
                <tr>
                    <th></th>
                    <td><%= f.submit "変更を保存", class:"btn btn-success" %></td>
                </tr>
            </tbody>
          </table>
        <% end %>
    </div>
</div>