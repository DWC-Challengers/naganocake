<h2>新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  
　　<div class="field ">
      <%= f.label :"名前" %>
      <%= f.label :"(姓)" %>
      <%= f.text_field :last_name, autofocus: true %>
      <%= f.label :"(名)" %>
      <%= f.text_field :first_name, autofocus: true %>
      </div>
      <div class="field">
      <%= f.label :"フリガナ"%>
      <%= f.label :"(セイ)" %>
      <%= f.text_field :last_name_kana, autofocus: true %>
      <%= f.label :"(メイ)" %>
      <%= f.text_field :first_name_kana, autofocus: true %>
      </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

 <div class="field">
  <%= f.label :"郵便番号", autofocus: true %>
  <%= f.text_field :postal_code %>
</div>

 <div class="field">
  <%= f.label :"住所" %>
  <%= f.text_field :address, autofocus: true %>
</div>

 <div class="field">
  <%= f.label :"電話番号"%>
  <%= f.text_field :phone_number %>
</div>

  <div class="field">
    <%= f.label :"パスワード(６文字以上)" %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :"パスワード(確認用)" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>
 <h2 class="head-line title_h2 text-center">既に登録済みの方</h2>
<p><%= render "devise/shared/links" %>からログインしてください。</p>
