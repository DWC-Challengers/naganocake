
  <div class="col-2 offset-2 my-5 bg-light text-black text-center">
    <h3>新規会員登録</h3>
  </div>

<div class="container">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

　<div class="form-group field">
    <%= f.label :"氏名", class: "col-sm-2 control-label" %>
    <%= f.label :"（姓）　", class: "control-label ml-4" %>
    <%= f.text_field :last_name, class: "last_name col-sm-2 form-control-static name" %>
    <%= f.label :"（名）　", class: "control-label" %>
    <%= f.text_field :first_name, class: "first_name col-sm-2 form-control-static name" %>
  </div>
  <div class="form-group field">
    <%= f.label :"フリガナ", class: "col-sm-2 control-label" %>
    <%= f.label :"（セイ）", class: "control-label ml-4" %>
    <%= f.text_field :last_name_kana, class: "last_name_kana col-sm-2 form-control-static name" %>
    <%= f.label :"（メイ）", class: "control-label" %>
    <%= f.text_field :first_name_kana, class: "first_name_kana col-sm-2 form-control-static name" %>
  </div>
  <div class="form-group field">
    <%= f.label :"郵便番号（ハイフンなし）", class: "col-sm-3 control-label" %>
    <%= f.text_field :postal_code, class: "col-sm-2 form-control-static" %>
  </div>
  <div class="form-group field">
    <%= f.label :"住所", class: "col-sm-3 control-label" %>
    <%= f.text_field :address, class: "col-sm-8 form-control-static" %>
  </div>
  <div class="form-group field">
    <%= f.label :"電話番号（ハイフンなし）", class: "col-sm-3 control-label" %>
    <%= f.text_field :phone_number, class: "col-sm-2 form-control-static" %>
  </div>
  <div class="form-group field">
    <%= f.label :"メールアドレス", class: "col-sm-3 control-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control-static" %>
  </div>
  <div class="form-group field">
    <%= f.label :"パスワード(6文字以上)" , class: "col-sm-3 control-label" %>
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control-static" %>
  </div>
  <div class="form-group field">
    <%= f.label :"パスワード(確認用)", class: "col-sm-3 control-label" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control-static" %>
  </div>

  <div class="row actions offset-3">
    <%= f.submit "新規登録", class: "btn btn-success col-sm-2" %>
  </div>
  <% end %>
</div>

  <div class="col-2 offset-2 mt-5 mb-3 bg-light text-black text-center">
    <h3>既に登録済みの方</h3>
  </div>
  <div class="col-6 offset-2">
    <p><%= render "devise/shared/links" %>からログインしてください。</p>
  </div>
</div>