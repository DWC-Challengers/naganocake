<div class="container">
  <div class="row my-3">
    <span class="rounded bg-light py-2 px-3 font-weight-bold">管理者ログイン</span>
  </div>

  <div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field row justify-content-center m-3">
        <%= f.label :"メールアドレス", class: "col-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: "col-6" %>
      </div>

      <div class="field row justify-content-center m-3">
        <%= f.label :"パスワード", class: "col-2" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "col-6" %>
      </div>

      <div class="actions text-center m-3">
        <%= f.submit "ログイン", class: "btn btn-primary"%>
      </div>
    <% end %>
  </div>
</div>
